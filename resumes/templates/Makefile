################################################################################
################################################################################
######################## Makefile for Latex Documents ##########################
################################################################################
################################################################################

XEX = xelatex

SOURCE_FILES = $(wildcard *.tex)

PDFS = $(SOURCE_FILES:%.tex=%)

.PHONY: clean

release: $(PDFS)

%: %.tex
	$(XEX) $^

print:
	echo $(SOURCE_FILES)
	echo $(PDFS)

clean:
	$(RM) *.log *.aux
